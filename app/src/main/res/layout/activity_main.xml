<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/motion_layout"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/coordinator"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo_youtube" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="4"
            tools:listitem="@layout/main_rv_item" />

        <FrameLayout
            android:id="@+id/fl_motion_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <View
        android:background="@color/white"
        android:id="@+id/video_container"  android:layout_height="0dp"
        android:layout_width="0dp" />

    <include layout="@layout/video_collapsed_content" />

    <SurfaceView
        android:id="@+id/video_player"
        app:srcCompat="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <include layout="@layout/video_expanded_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintStart_toStartOf="@id/video_player"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_hide_player" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintEnd_toStartOf="@id/iv_share"
        app:srcCompat="@drawable/ic_playlist_add_black_24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_playlist" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:srcCompat="@drawable/ic_share_black_24dp"
        android:layout_marginEnd="10dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_share" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintEnd_toEndOf="@id/video_player"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_more" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        app:layout_constraintEnd_toEndOf="@id/video_player"
        app:srcCompat="@drawable/ic_fullscreen_black_24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/iv_fullscreen" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_fullscreen"
        app:layout_constraintEnd_toStartOf="@id/iv_fullscreen"
        app:layout_constraintTop_toTopOf="@id/iv_fullscreen"
        android:text="00:00"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:id="@+id/tv_complete_time" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_fullscreen"
        app:layout_constraintStart_toStartOf="@id/video_player"
        app:layout_constraintTop_toTopOf="@id/iv_fullscreen"
        android:text="00:00"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_current_time" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        android:indeterminateTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/video_player"
        app:layout_constraintEnd_toEndOf="@id/video_player"
        android:id="@+id/pb_load_video" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        android:src="@drawable/ic_pause_black_24dp"
        app:altSrc="@drawable/ic_play_arrow_white_24dp"
        app:layout_constraintStart_toStartOf="@id/video_player"
        app:layout_constraintEnd_toEndOf="@id/video_player"
        android:id="@+id/iv_play_pause_expanded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        android:src="@drawable/ic_skip_next_black_24dp"
        app:layout_constraintStart_toEndOf="@id/iv_play_pause_expanded"
        android:layout_marginStart="50dp"
        android:id="@+id/iv_next" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        android:src="@drawable/ic_skip_previous_black_24dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@id/iv_play_pause_expanded"
        android:id="@+id/iv_back" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:progress="1"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="@id/ll_expand_container"
        app:layout_constraintBottom_toTopOf="@id/ll_expand_container"
        android:id="@+id/seek_bar_video" />

</androidx.constraintlayout.motion.widget.MotionLayout>